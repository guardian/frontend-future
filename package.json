{
  "name": "frontend-future",
  "version": "1.0.0",
  "description": "An investigation into the client-side architecture of Dotcom.",
  "scripts": {
    "start": "nodemon server.js localhost 3000 --exec babel-node",
    "build": "npm-run-all --parallel build:client build:server",
    "build:client": "npm-run-all --parallel build:svelte build:preact build:preactSc",
    "build:server": "npm-run-all --parallel build:svelte:server build:preact:server build:preactSc:server",
    "build:svelte": "rollup -c prototypes/svelte/rollup.config.js",
    "build:svelte:server": "rollup -c prototypes/svelte/rollup.config.ssr.js",
    "build:preact": "cd prototypes/preact && webpack -p --progress --config webpack.config.dev-client.js",
    "build:preact:server": "cd prototypes/preact && webpack -p --progress --config webpack.config.dev-ssr.js",
    "build:preactSc": "cd prototypes/preact-styled-components && webpack -p --progress --config webpack.config.dev-client.js",
    "build:preactSc:server": "cd prototypes/preact-styled-components && webpack -p --progress --config webpack.config.dev-ssr.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/frontend-future.git"
  },
  "homepage": "https://github.com/guardian/frontend-future#readme",
  "dependencies": {
    "@polymer/polymer": "^1.2.5-npm-test.2",
    "babel-eslint": "^7.1.1",
    "babel-plugin-external-helpers": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.21.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.26.1",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-flowtype": "^2.29.2",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "global": "^4.3.1",
    "hbs": "^4.0.1",
    "help": "^3.0.2",
    "node-sass": "^4.3.0",
    "npm-run-all": "^4.0.0",
    "preact": "^7.1.0",
    "preact-compat": "^3.11.0",
    "preact-render-to-string": "^3.3.0",
    "react": "^15.4.2",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "styled-components": "^1.3.1",
    "stylelint": "^7.7.1",
    "stylelint-config-standard": "^15.0.1",
    "stylelint-processor-styled-components": "^0.0.4",
    "vulcanize": "^1.15.1",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.10",
    "babel-preset-latest": "^6.16.0",
    "eslint": "^3.12.1",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "flow-bin": "^0.37.0",
    "flow-typed": "^2.0.0",
    "nodemon": "^1.11.0",
    "rimraf": "^2.5.4",
    "rollup": "^0.36.4",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-eslint": "^3.0.0",
    "rollup-plugin-svelte": "^1.0.0",
    "rollup-watch": "^2.5.0",
    "webpack-node-externals": "^1.5.4"
  }
}
