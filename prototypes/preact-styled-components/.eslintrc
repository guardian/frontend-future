{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
    "plugins": [
      "flowtype",
      "import"
    ],
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "commonjs": true
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-undef": "error",
        "no-use-before-define": ["error", "nofunc"],
        "no-multi-spaces": "off",
        "no-underscore-dangle": "off",
        "key-spacing": "off",
        "no-alert": "off",
        "flowtype/define-flow-type": 1
    },
    "settings": {
        "import/parser": "babel-eslint",
        "import/resolver": {
          "webpack": {
              "config": "webpack.config.dev-ssr.js"
          }
        }
    }
}
